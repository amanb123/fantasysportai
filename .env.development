# Development Environment Configuration
# Use this for local development

# ===== Environment =====
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ===== API Configuration =====
PORT=3002
HOST=0.0.0.0

# ===== Database =====
DATABASE_URL=sqlite:///./dev_fantasy_db.db

# ===== Redis =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1  # Different DB from production

# ===== CORS =====
# Allow local frontend URLs
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173

# ===== OpenAI =====
OPENAI_API_KEY=your-dev-api-key-here
OPENAI_MODEL=gpt-4

# ===== Sleeper API =====
SLEEPER_BASE_URL=https://api.sleeper.app/v1

# ===== AI Agents =====
AGENT_TIMEOUT=60
AGENT_SEED=42
MAX_NEGOTIATION_TURNS=10

# ===== NBA Stats API =====
NBA_STATS_ENABLED=true
nba_stats_enabled=true
NBA_CURRENT_SEASON=2025

# ===== Feature Flags (Enable all in dev) =====
ROSTER_CHAT_ENABLE_HISTORICAL_STATS=true
ROSTER_CHAT_HISTORICAL_STATS_MAX_SEASONS=5
ENABLE_RATE_LIMITING=false  # Disable rate limiting in dev
