# Fantasy Basketball League - Environment Configuration
# Copy this file to .env and fill in your values

# ===== LLM Configuration =====
# Ollama (Local LLM - Primary)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3
# Available models: llama3, llama2, mistral, etc.
# Install models with: ollama pull llama3

# OpenAI (Cloud LLM - Fallback)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# ===== Database =====
DATABASE_URL=sqlite:///./test_fantasy_db.db

# ===== Redis Cache =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===== Sleeper API =====
SLEEPER_DEFAULT_SEASON=2024
SLEEPER_TRANSACTION_ROUNDS_TO_FETCH=5
SLEEPER_MATCHUP_WEEKS_TO_FETCH=3

# ===== Server =====
API_HOST=0.0.0.0
API_PORT=3002
ENVIRONMENT=development
LOG_LEVEL=INFO

# ===== Agent Configuration =====
AGENT_TEMPERATURE=0.7
AGENT_TIMEOUT=60
AGENT_SEED=42
MAX_NEGOTIATION_TURNS=10
